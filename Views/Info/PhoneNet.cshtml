	@section Scripts{
		<script src="/netcharge/js/internet.js"></script>
		<script type="text/javascript">
			$.post('/JsonData/GetData', { typeData: 100101, key1: 1 }, function (data) {
				loadPackData(data);
			});
			$.post('/JsonData/GetData', { typeData: 100101, key1: 2 }, function (data) {
				loadPackData(data);
			});
			$.post('/JsonData/GetData', { typeData: 100101, key1: 3 }, function (data) {
				loadPackData(data);
			});
			function loadPackData(datas) {
				var res = '';
				datas=JSON.parse(datas);
				for (var i = 0; i < datas.length; i++) {
					var data = datas[i];
							//PhonePackageId	Title	OperatorId	SimTypeId	PeriodDay	PeriodHour	Amount	AmountWithVat	PackageId	IsActive
					res += `
					<div class="box-info-internet-package">
						<a class="d-block info-internet-package-link" data-PackageId="`+ data.PackageId + `" data-opt="` + data.OperatorId + `" data-sim="` + data.SimTypeId + `" data-day="` + data.PeriodDay + `" data-hour="` + data.PeriodHour + `">
							<p>
								<span class="cloud-arrow-down-icon __icon"></span>
										<span class="text">`+ data.Title + `</span>
							</p>
							<p>
								<span class="data-time-icon __icon"></span>
								<span class="text">`+ (data.PeriodDay==1?"1 روزه":data.PeriodDay==2?"7 روزه":data.PeriodDay==3?"30 روزه":data.PeriodDay==4?"بلند مدت":data.PeriodDay==5?"دکا":"") + ` </span>
							</p>
									<p class="m-0 fs-11">مبلغ با احتساب مالیات `+ numberWithCommas(data.AmountWithVat) + ` ریال</p>
							<div class="amount-package mt-5">
												<span class="number">`+ numberWithCommas(data.Amount) + `</span> <span>ریال</span>
							</div>
						</a>
					</div>`;
				}
				$('#packlist').append(res);
				packOnClick();
			}
		function numberWithCommas(x) {
			var parts = x.toString().split(".");
			parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ",");
			return parts.join(".");
		}

		</script>
		

		<script type="text/javascript">
			$.post('/JsonData/GetData', { typeData: 100103 }, function (data) {
				var mydate = new Date();
				if (data) {
					var params = JSON.parse(data);
					mydate = new Date(params[0].LatestGetToken);

				}
			if (new Date().getTime() - (24 * 60 * 60 * 1000) > mydate.getTime())
				$.post('/Info/ShoppingData', { WorkFlowId: 2008 }, function (data2) { });
			});
		</script>

	}

									
