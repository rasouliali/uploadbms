@model ShppaingPart.Models.AccountViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "فراموشی رمز عبور؟";
    Layout = "~/Views/Shared/_LayoutPaycell.cshtml";
}


<div class="row">

    <div class="col-md-7 forimg">
        <img src="/new/img/forgot.png" />
    </div>
    <div class="col-md-5 forgot">
        <h2>@ViewData["Title"]</h2>
<h4>حداقل یکی از موارد شماره همراه یا ایمیل را وارد نمایید.</h4>
<hr />
        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PhoneNumer"></label>

                    <input asp-for="PhoneNumer" type="tel" class="form-control" />

                <span asp-validation-for="PhoneNumer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>

                    <input asp-for="Email" class="form-control" />

                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-warning form-control">ثبت</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
