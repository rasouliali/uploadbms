                                </div>
                                <div class="col-12">
                                    <input type="text" name="transactionid" placeholder="کد تراکنش" class="form-control" />

                                </div>
                                <div class="col-12">
                                    <input type="text" name="mobile" placeholder="موبایل" value="@ViewBag.mobile" class="form-control" />
                                </div>
