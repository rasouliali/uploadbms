                                {
                                    <div class="col-12">
                                        <select type="text" name="userid" placeholder="کد کاربر" value="@ViewBag.userid" class="form-control" asp-items="ViewBag.Users"><option value="">لطفا انتخاب کنید</option></select>
                                    </div>
                                }
