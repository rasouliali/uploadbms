
@{
    ViewData["Title"] = "تهیه برنامه در آمدی";
    var sanitizer = new Ganss.XSS.HtmlSanitizer();
    sanitizer.AllowedTags.Add("iframe");
    sanitizer.AllowedTags.Add("style");
    sanitizer.AllowedCssProperties.Add("position");
    sanitizer.AllowedAttributes.Add("class");
    sanitizer.AllowedAttributes.Add("mozallowfullscreen");
    sanitizer.AllowedAttributes.Add("webkitallowfullscreen");
    sanitizer.AllowedAttributes.Add("allowFullScreen");
    Layout = "~/Views/Shared/_LayoutPaycell.cshtml";
}

<h1>تهیه برنامه در آمدی</h1>



@if (ViewBag.MakeIncomePlan != null)
{
    if (ViewBag.MakeIncomePlan.Tables[0] != null && ViewBag.MakeIncomePlan.Tables[0].Rows.Count > 0)
    {
        @for (int i = 0; i < ViewBag.MakeIncomePlan.Tables[0].Rows.Count; i++)
        {

            <div class="row">
                <div class="col-xs-12 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2  aparat">
                    <div class="panel panel-default panel-group">
                        <div class="panel-heading">@ViewBag.MakeIncomePlan.Tables[0].Rows[i]["Name"]</div>
                        <div class="panel-body panel-group">
                            <h4>
                                @Html.Raw(sanitizer.Sanitize(ViewBag.MakeIncomePlan.Tables[0].Rows[i]["Desc"], "https://www.aparat.com"))
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}

<style>
    .panel-group {
        position: inherit;
        height: auto;
    }
</style>
