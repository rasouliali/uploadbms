@model ShppaingPart.Models.AccountViewModels.B2BUserViewModel

@{
    ViewData["Title"] = "ساخت کاربران B2B";
}

<h1>ساخت کاربران B2B</h1>

@if(ViewBag.Status!=null){
    <div class="row">
        <div class="col-md-6">
            <label>@ViewBag.Status</label>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <a class="btn btn-success" href="https://hampisheh.com:53992/UserInfo">اطلاعات کلیه کاربران</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-success" href="https://hampisheh.com:53992/B2BDiscountPlan">مدیریت تخفیف و دسترسی کاربران B2B</a>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div class="form-group">
                <label asp-for="NationalCode"></label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-id-card"></i></span>
                    <input asp-for="NationalCode" class="form-control" />
                </div>
                <span asp-validation-for="NationalCode" class="text-danger"></span>
                <span id="NationalCodeErr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input asp-for="UserName" class="form-control" placeholder="با _B2B باید تمام شود" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="ایمیل" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mobile"></label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-sim-card"></i></span>
                    <input asp-for="Mobile" class="form-control" placeholder="به عنوان مثال 09121234455" />
                </div>
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input asp-for="Password" class="form-control" placeholder="رمزعبور" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="رمزعبور" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="B2BPassword"></label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input asp-for="B2BPassword" class="form-control" placeholder="رمزعبور" />
                </div>
                <span asp-validation-for="B2BPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmB2BPassword"></label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input asp-for="ConfirmB2BPassword" class="form-control" placeholder="رمزعبور" />
                </div>
                <span asp-validation-for="ConfirmB2BPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-warning form-control">تایید</button>
        </form>
    </div>
</div>

