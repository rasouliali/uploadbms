@model ShppaingPart.Models.ManageViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر رمزعبور";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}


@Html.Partial("_StatusMessage", Model.StatusMessage)

<div class="container">
<div class="row" dir="rtl">
	<div class="col-12">
		<h1>@ViewData["Title"]</h1>
	</div>
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">ثبت تغییر رمز</button>
        </form>
    </div>

	<div class="col-6 text-center">
		<img src="/new/img/chpass.png" class="chpassimg" />
	</div>
</div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}